/* Target the title element of the carousel */
.advc-title advc-d-none advc-d-md-block {
    display: none; /* Hide the original title */
}

.advc-title advc-d-none advc-d-md-block::before {
    content: url(attr(data-image)); /* Use the data-image attribute to get the URL */
    display: block; /* Make sure the image is displayed */
    width: 100%; /* Set width as needed */
    height: auto; /* Maintain aspect ratio */
}
